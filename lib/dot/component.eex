"<%= expand_path(@path, @id) %>" [shape=none label=<
  <TABLE STYLE="rounded"><TR>

    <%= unless @component |> Component.in_ports() |> Enum.empty?() do %>
      <TD BORDER="0">
        <%= component_ports(ports: Component.in_ports(@component), prefix: "in") %>
      </TD>
    <% end %>

    <TD BORDER="0">
      <%= @id %><BR/>
      <%= @component |> Module.split() |> Enum.join(".") %><BR/>
      <%= @strategy |> Module.split() |> Enum.join(".") %>
    </TD>

    <%= unless @component |> Component.out_ports() |> Enum.empty?() do %>
      <TD BORDER="0">
        <%= component_ports(ports: Component.out_ports(@component), prefix: "out") %>
      </TD>
    <% end %>
  </TR></TABLE>
>];
